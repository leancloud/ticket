{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "api/*": ["src/api/*"],
      "leancloud": ["src/leancloud"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}
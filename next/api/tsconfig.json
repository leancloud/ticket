{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true
  },
  "include": ["src"]
}
